{% extends "layout.njk" %}

{% block content %}

    <form class="card" method="POST" action="/teachers">
        <section 
            class="avatar" 
            style="background: url('https://source.unsplash.com/collection/8775984/500x500') no-repeat center center / cover;">
        </section>
        <section class="details">
            <h3>Novo Professor</h3>

            <div class="item">
                <div>Avatar</div>
                <div>
                    <input 
                        type="url"
                        name="avatar_url"
                        placeholder="http://"
                    >
                </div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div>
                    <input 
                        type="text"
                        name="name"
                        placeholder="Nome do professor"
                    >
                </div>
            </div>

            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input 
                        type="date" 
                        name="birth"
                    >
                </div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>Doutorado</div>
            </div>

            <div class="item">
                <div>Tipo de Aula</div>
                <div>
                    <span><input type="radio" name="class_type" value="P" ckecked>Presencial</span>
                    <span><input type="radio" name="class_type" value="D">À distância</span>
                </div>
            </div>

            <div class="item">
                <div>Área de atuação</div>
                <div>
                    <input 
                        type="text"
                        name="services"
                        placeholder="Digite uma ou mais áreas de atuação"
                    >
                </div>
            </div>

            <div class="item">
                <button type="submit">Salvar</button>
            </div>
        </section>
    </form>


{% endblock content %}