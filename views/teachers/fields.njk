<div class="item">
    <div>Avatar</div>
        <div>
            <input 
                type="url"
                name="avatar_url"
                placeholder="http://"
                value="{{ teacher.avatar_url }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Nome</div>
        <div>
            <input 
                type="text"
                name="name"
                placeholder="Nome do professor"
                value="{{ teacher.name }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Data de Nascimento</div>
        <div>
            <input 
                type="date" 
                name="birth"                        
                value="{{ teacher.birth }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
            <select name="degree" required>
                <option value="">Escolha um grau de escolaridade</option>
                <option 
                    value="medio"
                    {% if teacher.degree == 'medio' %}
                        selected
                    {% endif %}
                >Ensino médio completo</option>

                <option 
                    value="graduate"
                    {% if teacher.degree == 'graduate' %}
                        selected
                    {% endif %}
                >Ensino superior completo</option>
        
                <option 
                    value="master"
                    {% if teacher.degree == 'master' %}
                        selected
                    {% endif %}
                >Mestrado</option>

                <option 
                    value="phd"
                    {% if teacher.degree == 'phd' %}
                        selected
                    {% endif %}
                >Doutorado</option>
            </select>
        </div>
    </div>

    <div class="item">
        <div>Tipo de Aula</div>
        <div>
            <span>
                <input 
                    type="radio"
                    name="class_type"
                    value="P" 
                    {% if teacher.class_type == 'P' %}
                        checked
                    {% endif %}
                >Presencial</span>
            <span>
                <input
                    type="radio"
                    name="class_type"
                    value="D"
                    {% if teacher.class_type == 'D' %}
                        checked
                    {% endif %}
                >À distância</span>
        </div>
    </div>

    <div class="item">
        <div>Área de atuação</div>
        <div>
            <input 
                type="text"
                name="services"
                placeholder="Digite uma ou mais áreas de atuação"
                value="{{ teacher.services }}"
            >
        </div>
    </div>

    <div class="item">
        <button type="submit">Salvar</button>
    </div>